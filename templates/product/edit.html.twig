{% extends "base.html.twig" %}

{% block title %}
	Édition de :
	{{product.name}}
{% endblock %}

{% block body %}
	<h1 class="text-center">Édition du produit :
		{{product.name}}
	</h1>

	{{ form_start(formView, {'attr': {'novalidate': 'novalidate'}}) }}

	{{form_errors(formView)}}

	<div class="row">
		<div class="col">
			{{form_row(formView.name)}}
			{{form_row(formView.price)}}
		</div>
		<div class="col">
			{{form_row(formView.mainPicture)}}
			{{form_row(formView.category)}}
			{{form_row(formView.shortDescription)}}


		</div>
	</div>


	<button type="submit" class="btn btn-success mt-4">
		<i class="fas fa-save"></i>
		Modifier le produit
	</button>

	{{ form_end(formView) }}
{% endblock %}
